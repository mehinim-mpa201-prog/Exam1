@using Exam1.Areas.Admin.ViewModels

@{
    ViewData["Title"] = "Update";
}

@model TeamMemberUpdateVM


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Team Member</h4>
            <p class="card-description">

            </p>
            <form method="post" asp-controller="TeamMembers" asp-action="Update" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">FullName</label>
                    <input asp-for="FullName" class="form-control" id="exampleInputName1" placeholder="Name">
                </div>

                <div class="form-group">
                    <label for="exampleInputImg">Image</label>
                    <input asp-for="Image" class="form-control" id="exampleInputImg" placeholder="Img">
                </div>
                <div class="form-group">
                    <label for="exampleDesignationId">Designation</label>
                    <select asp-for="DesignationId" class="form-control" id="exampleDesignationId">

                        <option selected disabled>Designation seç</option>
                        @foreach (var designation in ViewBag.Designations)
                        {
                            <option value="@designation.Id">@designation.DesignationName</option>
                        }
                    </select>
                </div>

                <div style="color:red" asp-validation-summary="All" class="alert-danger"></div>
                <button type="submit" class="btn btn-warning me-2">Update</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>
